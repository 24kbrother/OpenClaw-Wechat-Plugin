{
  "id": "openclaw-wechat-plugin",
  "name": "OpenClaw WeChat Plugin",
  "version": "1.0.0",
  "description": "OpenClaw 企业微信 channel plugin",
  "extensions": ["./src/index.js"],
  "configSchema": {
    "type": "object",
    "properties": {
      "corpId": {
        "type": "string",
        "description": "企业微信 Corp ID"
      },
      "corpSecret": {
        "type": "string",
        "description": "企业微信 Corp Secret"
      },
      "agentId": {
        "type": "number",
        "description": "企业微信 Agent ID"
      },
      "callbackToken": {
        "type": "string",
        "description": "回调 Token"
      },
      "callbackAesKey": {
        "type": "string",
        "description": "回调 AES Key"
      },
      "webhookPath": {
        "type": "string",
        "description": "Webhook 路径",
        "default": "/wecom/callback"
      },
      "apiProxy": {
        "type": "string",
        "description": "API 代理地址"
      }
    }
  },
  "channel": {
    "id": "openclaw-wechat-plugin",
    "label": "OpenClaw WeChat",
    "selectionLabel": "OpenClaw WeChat (企业微信自建应用)",
    "docsPath": "/channels/openclaw-wechat-plugin",
    "docsLabel": "openclaw-wechat-plugin",
    "blurb": "OpenClaw Enterprise WeChat internal app via callback + send API.",
    "order": 80,
    "aliases": ["wecom", "wework", "qiwei", "wxwork", "openclaw-wecom"]
  }
}

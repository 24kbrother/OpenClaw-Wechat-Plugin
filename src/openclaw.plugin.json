{
  "id": "openclaw-wechat-plugin",
  "name": "OpenClaw WeChat Plugin",
  "version": "1.0.0",
  "description": "OpenClaw 企业微信 channel plugin",
  "extensions": ["./src/index.js"],
  "configSchema": {
    "type": "object",
    "properties": {
      "corpId": {
        "type": "string",
        "description": "企业微信 Corp ID"
      },
      "corpSecret": {
        "type": "string",
        "description": "企业微信 Corp Secret"
      },
      "agentId": {
        "type": "number",
        "description": "企业微信 Agent ID"
      },
      "callbackToken": {
        "type": "string",
        "description": "回调 Token"
      },
      "callbackAesKey": {
        "type": "string",
        "description": "回调 AES Key"
      },
      "webhookPath": {
        "type": "string",
        "description": "Webhook 路径",
        "default": "/wecom/callback"
      },
      "apiProxy": {
        "type": "string",
        "description": "API 代理地址"
      }
    }
  },
  "channelConfig": {
    "wecom": {
      "envPrefix": "WECOM",
      "properties": {
        "corpId": { "type": "string", "env": "WECOM_CORP_ID" },
        "corpSecret": { "type": "string", "env": "WECOM_CORP_SECRET" },
        "agentId": { "type": "number", "env": "WECOM_AGENT_ID" },
        "callbackToken": { "type": "string", "env": "WECOM_CALLBACK_TOKEN" },
        "callbackAesKey": { "type": "string", "env": "WECOM_CALLBACK_AES_KEY" },
        "webhookPath": { "type": "string", "env": "WECOM_WEBHOOK_PATH" },
        "apiProxy": { "type": "string", "env": "WECOM_API_PROXY" }
      }
    }
  },
  "channel": {
    "id": "wecom",
    "label": "OpenClaw WeChat",
    "selectionLabel": "OpenClaw WeChat (企业微信自建应用)",
    "docsPath": "/channels/wecom",
    "docsLabel": "wecom",
    "blurb": "OpenClaw Enterprise WeChat internal app via callback + send API.",
    "order": 80,
    "aliases": ["openclaw-wechat-plugin", "openclaw-wecom", "wework", "qiwei", "wxwork"]
  }
}
